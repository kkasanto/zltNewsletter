@model zltNewsletter.Models.Article

@{
}

<input type="hidden" asp-for="ArticleId" id="ArtId">

    <div class="container">
        
        <div class="row">
            <div class="col">
                Author:<br />
                <input asp-for="ArticleAuthor" class="form-control" />
            </div>

            <div class="col">
            Article Group: <select asp-for="ArticleSectionId" class="form-select" asp-items="ViewBag.ArticleSectionId"></select>
            <span asp-validation-for="ArticleSectionId" class="text-danger"></span>
            </div>

            <div class="col">
                Active ?: <input class="form-check-input" asp-for="ArticlePublished" /><br />
                Sort order (number): <input type="number" style="width: 50px;" asp-for="ArticleSortOrder" />
            </div>

            <div class="col">
                <input type="submit" value=" - Save - " class="btn btn-primary align-right" />
            </div>
        </div>

        <div class="row">
            <div class="col">
                Article Title: <br />
                <input asp-for="ArticleTitle" class="form-control" />
                <span asp-validation-for="ArticleTitle" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <br />
                Article Header:
                <textarea asp-for="ArticleHeader" class="form-control" id="textedit"></textarea>
                <span asp-validation-for="ArticleHeader" class="text-danger"></span>
            </div>
            <div class="form-group textareawrapper">
                <br />
                Article Text:
                <textarea asp-for="ArticleText" class="form-control" id="textedit" width="100"></textarea>
                <span asp-validation-for="ArticleText" class="text-danger"></span>
            </div>
        </div>
    </div>
